<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ImportGroup Label="PropertySheets" />
  <PropertyGroup Label="UserMacros">
    <StormancerRoot>$(MSBuildThisFileDirectory)..</StormancerRoot>
  </PropertyGroup>
  <PropertyGroup />
  <ItemDefinitionGroup>
    <ClCompile>
      <PreprocessorDefinitions>_STORMANCER_LIB_NAME="Stormancer$(PlatformToolsetVersion)_$(Configuration)_$(Platform).lib";%(PreprocessorDefinitions)</PreprocessorDefinitions>
      <AdditionalIncludeDirectories>$(StormancerRoot)\include;%(AdditionalIncludeDirectories)</AdditionalIncludeDirectories>
    </ClCompile>
	<Link>
		<AdditionalLibraryDirectories>$(StormancerRoot)\libs;%(AdditionalLibraryDirectories)</AdditionalLibraryDirectories>
	</Link>
  </ItemDefinitionGroup>
  <ItemGroup>
    <BuildMacro Include="StormancerRoot">
      <Value>$(StormancerRoot)</Value>
    </BuildMacro>
  </ItemGroup>
</Project>